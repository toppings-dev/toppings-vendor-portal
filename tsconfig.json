{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2018", "dom", "DOM.Iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    // "strict": true,
    "noImplicitAny": false,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
